{
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 100,
    "overrides": [
        {
            "files": ["*.md", "*.markdown"],
            "options": {
                "tabWidth": 2,
                "proseWrap": "always"
            }
        }
    ]
}